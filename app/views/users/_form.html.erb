<%= render 'shared/errors', obj: @user%>


<%= form_for(@user, :html => {class: "formular", role: "form"}) do |f| %>

<h2 style="font-weight: bold; text-align: center; "> <%= @user.new_record? ? "Sign up for Alpha Blog" : "Edit your account"%> </h2>

<% f.label :username %>
<%= f.text_field :username, class: "txttitle", placeholder: "Enter username", autofocus: true%>


<% f.label :email %>
<%= f.email_field :email, placeholder:"Enter email", class: "txttitle" %>

<% f.label :password %>
<%= f.password_field :password, placeholder: "Enter password", class: "txttitle" %>


<%= f.submit (@user.new_record? ? "Sign up" : "Update")%> 


<%= link_to "Back to article listing", articles_path%> 


<%end%>
