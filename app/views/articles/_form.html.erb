
<% if @article.errors.any? %>
<h2> Follwing errors found</h2>
<ul>
	<% @article.errors.full_messages.each do |msg|%>
	<li><%= msg %></li>
	<%end%>
</ul>
<%end%>


<%= form_for(@article, :html => {class: "formular", role: "form"}) do |f| %>

<div style="background-color: blue; width: 60%;">
<%= f.label :title %>
<%= f.text_field :title, class: "txttitle" %>
</div>

<p>
<%= f.label :description %>
<%= f.text_area :description %>
</p>

<p>
	<%= f.submit%>
</p>

<%= link_to "Back to article listing", articles_path%>

<%end%>

