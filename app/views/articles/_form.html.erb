<%= render 'shared/errors', obj: @article%>

<%= form_for(@article, :html => {class: "formular", role: "form"}) do |f| %>


<% f.label :title %>
<%= f.text_field :title, class: "txttitle", placeholder: "Article title", autofocus: true%>


<% f.label :description %>
<%= f.text_area :description, rows: 10, class: "txtDescription" %>	

<%= f.submit%> 


<%= link_to "Back to article listing", articles_path%> 


<%end%>

