<h1 style="text-align: center; font-weight: bold"> All articles </h1>
<% @articles.each do |article|%>
<% id = article.id %>

<p>
<ul class="allarticles">

<li style="padding-top: 5px;font-size: 20px "><%= link_to "#{article.title}", article_path(article)%> </li><br>
<li style="font-size: 10px"><%=truncate(article.description, length: 100)%><br><br>
<%=link_to "Edit", edit_article_path(article), class: "editBtn1"%> | <%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure="}, class: "editBtn3"%> <h5 style="font-size: 11px;float: right;position: relative; margin-right:3px">Created by: <%=article.user.username if article.user%>, <%=time_ago_in_words(article.created_at)%> ago, last update: <%= time_ago_in_words(article.updated_at)%></h5><br><br>
</ul>
</p>




<%end%>