
<%= form_for(:session, :html => {class: "formular", role: "form"}, url: login_path) do |f| %>

<h2 style="font-weight: bold; text-align: center; "> Login for Alpha Blog"</h2>

<% f.label :email %>
<%= f.email_field :email, class: "txttitle", placeholder: "Enter email", autofocus: true%>

<% f.label :password %>
<%= f.password_field :password, placeholder: "Enter password", autocomplete: "off", class: "txttitle" %>


<%= f.submit "Login"%> 


<%= link_to "Back to article listing", articles_path%> 


<%end%>